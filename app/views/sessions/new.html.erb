<h1><%= @entity_type == "company" ? "Company Login" : "User Login" %></h1>

<%= form_with url: request.path, local: true do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email, required: true %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>

  <div>
    <%= form.submit "Login" %>
  </div>
<% end %>

<%= link_to "Back to Home", root_path %>
