<% entity = @user || @company %>

<div class="container d-flex justify-content-center align-items-center">
  <div class="card shadow-lg p-4 mt-5" style="max-width: 400px; width: 100%;">
    <h2 class="text-center mb-4">Reset Your Password</h2>

    <%= form_with url: passwordresetupdate_path(entity), method: :patch, class: "needs-validation" do |f| %>
      
      <%= hidden_field_tag :email, entity.email %>
      <%= hidden_field_tag :token, params[:token] %>

      <div class="mb-3">
        <label class="form-label">New Password:</label>
        <%= f.password_field :password, class: "form-control", required: true, placeholder: "Enter new password" %>
      </div>

      <div class="mb-3">
        <label class="form-label">Confirm Password:</label>
        <%= f.password_field :password_confirmation, class: "form-control", required: true, placeholder: "Confirm new password" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Reset Password", class: "btn btn-primary btn-lg" %>
      </div>

    <% end %>
  </div>
</div>
