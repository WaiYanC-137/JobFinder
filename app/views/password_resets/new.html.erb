<div class="container d-flex justify-content-center align-items-center">
  <div class="card shadow-lg p-4 mt-5" style="max-width: 400px; width: 100%;">
    <h2 class="text-center mb-4">Forgot Your Password?</h2>

    <%= form_with url: passwordreset_path, method: :post, class: "needs-validation" do %>

      <div class="mb-3">
        <label class="form-label">Email:</label>
        <%= email_field_tag :email, nil, class: "form-control", required: true, placeholder: "Enter your email" %>
      </div>

      <div class="d-grid">
        <%= submit_tag "Send Reset Email", class: "btn btn-primary btn-lg" %>
      </div>

    <% end %>
  </div>
</div>
